  <Window
    Size="0, 200"
    BackgroundColor="0xFFFFFFFF"
    BorderWidth="0.0f"
    Dock="bottom">
    <Button Name="Next Button"
      BackgroundColor="0x888888FF"
      BorderWidth="0.0f"
      Offset="900,50"
      Size="100,100"
      H_Size="110,110"
      P_Size="90,90"
      Opacity="1.0f"
      OnClick="SkipNext"
      Texture="Data/Images/UI/next.png">
    </Button>
    <Button Name="Back Button"
      BackgroundColor="0x888888FF"
      Offset="700,50"
      Size="100,100"
      H_Size="110,110"
      P_Size="90,90"
      Opacity="1.0f"
      OnClick="SkipBack"
      Texture="Data/Images/UI/back.png">
    </Button>
    <Button Name="Play/Pause Button"
      BackgroundColor="0x888888FF"
      Size="100,100"
      Offset="800,50"
      H_Size="110,110"
      P_Size="90,90"
      Opacity="1.0f"
      OnClick="TogglePlayPause"
      Texture="Data/Images/UI/pause.png">
    </Button>
  </Window>

